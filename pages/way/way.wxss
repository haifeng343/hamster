page {
  background-color: #F0F4FA;
}

.form {
  width:704rpx;
  background:rgba(255,255,255,1);
  box-shadow:0 0 30rpx 0 rgba(222,229,242,1);
  border-radius:10rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  margin: 22rpx auto 0;
}

.form-item {
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #EBEBEB;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 46rpx 0 40rpx;
  font-size: 30rpx;
  font-weight: 400;
  position: relative;
}

.form-item-label {
  margin-right: 20rpx;
}

.hot {
  font-size: 20rpx;
  width: 60rpx;
  height: 30rpx;
  background: rgba(251, 92, 53, 1);
  border-radius: 20rpx;
  border: 2rpx solid rgba(251, 92, 53, 1);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.form-item-txt{
  font-size: 26rpx;
  color: #BCBCBC;
}
.gou{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 46rpx;
  top: 50%;
  transform: translateY(-50%);
}