  font-size: 30rpx;
  background:rgba(255,255,255,1);
  border-radius:100px 0px 0px 100px;
}
.footer-fixed1{
  position: fixed;
  width:750rpx;
  box-sizing: border-box;
  padding: 0 57rpx;
  height:98rpx;
