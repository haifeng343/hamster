
page{
  background-color: #fff;
}
.list{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.nav{
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #f2f2f2;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex: 1;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  font-weight: 400;
  color: #434343;
  font-size: 32rpx;
}
.nav-item{
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.orderStatus{
  width: 200rpx;
  text-align: right;
  color: #2A6DFF;
}
.active{
  position: relative;
  font-weight: 500;
  color: #434343;
  transition: all .3s;
}
.active::after{
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 8rpx;
  bottom: 16rpx;
  color: #2A6DFF;
  background-color:#2A6DFF ;
  border-radius:100rpx 100rpx 0 0;
  /* border-bottom: 4rpx solid #4A90E2; */
}
.scroll1{
  margin-top: 100rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.mb80{
  width: 100%;
  height: 80rpx;
  background-color: transparent;
}
.item{
  width: 94.67%;
  margin: 20rpx auto 0;
  height: auto;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 31rpx 32rpx;
  border-radius: 30rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 30px 0px rgba(222,229,242,1);
  border-radius:10px;
  border:1px solid rgba(235,235,235,1);
  position: relative;
}
.item-top{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #000;
  border-bottom: 2rpx solid #EBEBEB;
  padding-bottom: 20rpx;
}
.item-top-left{
  width: 410rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.item-top-code{
  width: 270rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: keep-all;
}
.item-content{
  width: 100%;
  height: 186rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: flex-start;
  background-color: #F1F1F1;
  margin-bottom: 22rpx;
  flex-direction: row;
  box-sizing: border-box;
  border-bottom: 2rpx solid #EBEBEB;
}
.item-logo{
  width: 140rpx;
  height: 142rpx;
  margin-right: 20rpx;
}
.item-content-right{
  display: flex;
  font-size: 28rpx;
  width: 430rpx;
  flex-direction: column;
  justify-content: space-between;
}
.num,.money{
  color: #7C7C7D;
  line-height: 28rpx;
}
.money{
  color: #FB5C35;
  margin-top: 12rpx;
}
.item-status{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.item-status-txt1{
  color: #F56C6C;
}
.item-status-txt2{
  color: #67C23A;
}
.item-status-txt3{
  color: #E6A23C;
}
.item-status-count{
  font-size: 26rpx;
  color: #434343;
  display: flex;
  align-items: center;
}
.mt34{
  margin-top: 15rpx;
}
.price{
  font-size: 32rpx;
  color: #F06902;
  font-family:PingFangSC-Medium,PingFang SC;
}
.fare{
  width: 100%;
  margin: 0 auto 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #7C7C7D;
  font-size: 26rpx;
}
.footer{
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
}

.btn{
  width:150rpx;
  height:54rpx;
  line-height: 54rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border:2rpx solid #2A6DFF;
  background: #fff;
  font-size: 24rpx;
  color: #2A6DFF;
  font-weight:500;
  border-radius: 4rpx;
  margin-left: 20rpx;
}

.conta{
  width: 140rpx!important;
  margin: 0!important;
  padding: 0!important;
  /* margin-right: 20rpx!important; */
}
.delivery{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.delivery-title{
  margin: 14rpx 0 18rpx 0;
  font-size: 30rpx;
  color: #000;
}
.delivery-content{
  font-size: 28rpx;
  color: #333;
  line-height: 42rpx;
  margin-bottom: 24rpx;
}
.mobile{
  color: #4A90E2;
}
.delivery-time{
  font-size: 24rpx;
  color: #7C7C7D;
}