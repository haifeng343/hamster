page {
  background: #fff;
}

.form {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.form-item1 {
  width: 100%;
  height: 104rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
  padding: 0 52rpx 0 58rpx;
  border-bottom: 2rpx solid #F2F2F2;
}

.form-item-label {
  font-size: 30rpx;
  color: #000;
}

.form-item-input1 {
  font-size: 24rpx;
  text-align: left;
  width: 90%;
}

.placeholder {
  color: #BCBCBC;
}

.form-item2 {
  display: flex;
  justify-content: flex-end;
}

.send {
  width: 636rpx;
  height: 74rpx;
  background: linear-gradient(90deg, rgba(98, 179, 255, 1) 0%, rgba(79, 119, 255, 1) 100%);
  color: #fff;
  border-radius: 37rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  position: fixed;
  bottom: 42rpx;
  left: 50%;
  transform: translateX(-50%);
}

.now {
  display: flex;
  justify-content: flex-start;
  margin: 40rpx;
  color: #C8C8C8;
  font-size: 24rpx;
}

.eor {
  background: rgba(228, 228, 228, 1);
  border-radius: 37rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  position: fixed;
  bottom: 42rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #B9B9B9;
}

