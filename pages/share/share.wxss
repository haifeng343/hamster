page{
  background-color: #fff;
  height: 100%;
  height: 100vh;
  box-sizing: border-box;
  position: relative;
}
.share{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.shareImgs{
  width: 70%;
  height: 180rpx;
  position: fixed;
  top: 80rpx;
  z-index: 1;
  left: 50%;
  transform: translateX(-50%);
}
.shareImgs1{
  top: 25%;
  height: 400rpx;
}
.shareImgs2{
  top: 58%;
  width: 80%;
  height: 280rpx;
}
.all{
  width: 100%;
  height: 100%;
  display: flex;
}
.img1{
  width: 70%;
  height: 70%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 1;
}
.clear{
  height: 50rpx;
  width: 50rpx;
  position: fixed;
  top: 13%;
  right: 12%;
  z-index: 2;
}
.shareFooter{
  width: 95%;
  height: 100rpx;
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1;
  background-color: transparent;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
}
.share1{
  width: 261rpx;
  height: 57rpx;
  z-index: 1;
}
.save{
  width: 50%;
  height: 78rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  background-color: #fff;
  font-weight: 32rpx;
  position: absolute;
  left: 50%;
  bottom: 60rpx;
  transform: translateX(-50%);
  z-index: 2;
}
.myShare{
  width:598rpx;
  height:806rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.share-txt1{
  font-size: 24rpx;
  color: #3F69BC;
  line-height: 36rpx;
  margin-top: 90rpx;
}
.share-txt2{
  color: #3F69BC;
  font-size: 48rpx;
  margin-top: 18rpx;
  letter-spacing:2rpx;
}
.share-txt3{
  font-size:20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  width:220rpx;
  margin-top: 26rpx;
  height:32rpx;
  background:linear-gradient(90deg,rgba(98,179,255,1) 0%,rgba(79,119,255,1) 100%);
  border-radius:16rpx;
}
.shareImg{
  width: 200rpx;
  height: 200rpx;
  margin-top: 290rpx;
}
.share-txt4{
  font-size: 24rpx;
  color: #7C7C7D;
  margin-top: 52rpx;
}
.FixedBto{
  height: 412rpx!important;
}
.share-footer{
  width: 100%;
  height: 356rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  transition: all .3s;
}
.share-content{
  width: 95.47%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 0 auto 0;
}
.share-item{
  margin-left: 0!important;
  width: auto!important;
  margin-right: 0!important;
  outline: none!important;
}
button:after{
  border:none!important;
}
.shareIcon{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 14rpx;
}
.cancel{
  width: 100%;
  font-size: 30rpx;
  color: #000;
  margin-top: 26rpx;
  text-align: center;
}










