page {
  background: #fff;
}

.container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.m60 {
  margin: 230rpx auto 40rpx;
  font-size: 32rpx;
  color: #3A3A3A;
  line-height: 45rpx;
  font-weight: 600;
}

.orderno {
  font-size: 30rpx;
  color: #3A3A3A;
  font-weight: 400;
  margin-top: 40rpx;
}

.orderno1 {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #BABABA;
  font-weight: 400;
}

.money {
  font-size: 72rpx;
  font-weight: 500;
}

.footer {
  width: 750rpx;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 2rpx 10rpx 10rpx rgba(240, 240, 240, 0.5);
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 84.8%;
  height: 74rpx;
  border-radius: 37px;
  background: linear-gradient(90deg, rgba(98, 179, 255, 1) 0%, rgba(79, 119, 255, 1) 100%);
  font-size: 24rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}